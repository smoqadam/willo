{
  "watchers": [
    {
      "path": "/Users/saeed/watcher",
      "recursive": true,
      "rules": [
        {
          "event": "created",
          "conditions": [
            {
              "type": "glob",
              "value": "*.jpg"
            }
          ],
          "actions": [
            {
              "type": "move",
              "destination": "/Users/saeed/Pictures"
            }
          ]
        },
        {
          "event": "modified",
          "conditions": [
            {
              "type": "glob",
              "value": "*.txt"
            },
            {
              "type": "contains",
              "text": "test"
            }
          ],
          "actions": [
            {
              "type": "rename",
              "template": "{name}_{date}.{ext}"
            },
            {
              "type": "log",
              "message": "file modified: {file}"
            }
          ]
        }
      ]
    }
  ]
}
