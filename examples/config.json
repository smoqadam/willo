{
  "watchers": [
    {
      "path": "/Users/saeed/watcher",
      "recursive": true,
      "conditions": [
        {
          "type": "event",
          "value": "created"
        },
        {
          "type": "glob",
          "value": "*.jpg"
        }
      ],
      "actions": [
        {
          "type": "move",
          "destination": "/Users/saeed/Pictures"
        }
      ]
    },
    {
      "path": "/Users/saeed/Downloads",
      "recursive": false,
      "conditions": [
        {
          "type": "event",
          "value": "modified"
        },
        {
          "type": "glob",
          "value": "*.txt"
        },
        {
          "type": "contains",
          "value": "test"
        }
      ],
      "actions": [
        {
          "type": "rename",
          "template": "{name}_{date}.{ext}"
        },
        {
          "type": "log",
          "message": "file modified: {file}"
        }
      ]
    }
  ]
}
